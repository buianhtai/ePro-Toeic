<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1">
    
    <ImageView 
        android:id="@+id/tabwidget_imageview"
        android:layout_width="@dimen/launch_home_fragment_tabhost_tabwidget_imagesize"
        android:layout_height="@dimen/launch_home_fragment_tabhost_tabwidget_imagesize"
        android:layout_gravity="center_horizontal"
        android:contentDescription="@string/image_view_content_description"
        android:scaleType="fitXY"/>
    <TextView 
        android:id="@+id/tabwidget_textview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/launch_home_fragment_tabhost_tabwidget_bottommargin"
       	android:textSize="@dimen/launch_home_fragment_tabhost_tabwidget_textsize"
        android:gravity="center"/>
</LinearLayout>
