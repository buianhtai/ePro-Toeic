<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:baselineAligned="false"
    android:orientation="horizontal" >
    <ImageButton 
        android:id="@+id/dict_manage_fragment_delete_btn"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:contentDescription="@string/image_view_content_description"
        android:src="@drawable/ic_action_discard_dark"
        style="?android:attr/borderlessButtonStyle"
        android:duplicateParentState="false"/>
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
       	android:layout_marginTop="@dimen/dict_local_manage_fragment_row_vertical_margin"
       	android:layout_marginBottom="@dimen/dict_local_manage_fragment_row_vertical_margin"
       	android:orientation="vertical">
        <TextView 
            android:id="@+id/dict_manage_fragment_tittle_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceMedium"/>
        <TextView 
            android:id="@+id/dict_manage_fragment_lang_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_marginLeft="@dimen/dict_local_manage_fragment_row_horizontal_margin"/>
    </LinearLayout>
    
   	<ImageButton 
        android:id="@+id/dict_manage_fragment_up_btn"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:contentDescription="@string/image_view_content_description"
        android:src="@drawable/ic_action_collapse"
        style="?android:attr/borderlessButtonStyle"
        android:duplicateParentState="false"/>
   	
   	<ImageButton 
        android:id="@+id/dict_manage_fragment_down_btn"
