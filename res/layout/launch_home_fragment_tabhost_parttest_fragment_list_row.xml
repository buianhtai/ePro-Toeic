<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/launch_home_fragment_tabhost_parttest_fragment_list_row_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">
    
    <include layout="@layout/launch_home_fragment_tabhost_parttest_fragment_list_section_item" 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content" />
    
    <RelativeLayout 
        android:layout_width="match_parent"
    	android:layout_height="wrap_content" 
    	android:descendantFocusability="blocksDescendants">
    	
    	<com.mZone.epro.common.view.CoverPhotoImageView 
        	android:id="@+id/launch_home_fragment_tabhost_parttest_fragment_list_row_item_imgv_cover"
        	android:layout_width="120dp"
        	android:layout_height="160dp"
        	android:contentDescription="@string/image_view_content_description"
        	android:scaleType="fitXY"
        	android:layout_alignParentLeft="true"
        	android:layout_centerVertical="true"
        	android:layout_margin="5dp"/>
    
 		<ImageButton 
			android:id="@+id/launch_home_fragment_tabhost_parttest_fragment_list_row_item_btn_delete"
	  		android:layout_width="48dp"
	   		android:layout_height="48dp"
        	android:layout_margin="5dp"
        	android:layout_alignParentRight="true"
        	android:layout_alignParentBottom="true"
	   		android:background="@android:color/transparent"
	   		android:src="@drawable/delete_btn_selector"
	   		android:scaleType="fitXY"
	  		android:adjustViewBounds="true"
	   		android:contentDescription="@string/image_view_content_description"/>
    
    	<com.mZone.epro.common.view.NoHorizontalScrollTextView 
        	android:id="@+id/launch_home_fragment_tabhost_parttest_fragment_list_row_item_tv_title"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_margin="10dp"
        	android:layout_alignParentTop="true"
        	android:layout_toRightOf="@id/launch_home_fragment_tabhost_parttest_fragment_list_row_item_imgv_cover"
        	android:layout_toLeftOf="@id/launch_home_fragment_tabhost_parttest_fragment_list_row_item_btn_delete"
        	android:ellipsize="end"
        	android:singleLine="true"
        	android:textColor="@android:color/black"
        	android:textAppearance="?android:attr/textAppearanceLarge"
        	style="@style/TextColorBlack"/>
    
    	<com.mZone.epro.common.view.NoHorizontalScrollTextView 
        	android:id="@+id/launch_home_fragment_tabhost_parttest_fragment_list_row_item_tv_subtitle"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_marginLeft="10dp"
        	android:layout_marginRight="10dp"
        	android:layout_below="@id/launch_home_fragment_tabhost_parttest_fragment_list_row_item_tv_title"
        	android:layout_toRightOf="@id/launch_home_fragment_tabhost_parttest_fragment_list_row_item_imgv_cover"
        	android:layout_toLeftOf="@id/launch_home_fragment_tabhost_parttest_fragment_list_row_item_btn_delete"
        	android:ellipsize="end"
        	android:singleLine="true"
        	android:textColor="@android:color/black"
        	android:textAppearance="?android:attr/textAppearanceMedium"
        	style="@style/TextColorBlack"/>
    </RelativeLayout>	
</LinearLayout>
