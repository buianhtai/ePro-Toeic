<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="@dimen/Part1_script_margin_lr"
	    android:layout_marginRight="@dimen/Part1_script_margin_lr"
	    android:gravity="center_vertical"
	    android:orientation="vertical"
	    android:background="@drawable/subview_background">
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="@dimen/Part1_script_margin_top"
	        android:layout_marginLeft="@dimen/Part1_script_textview_margin_left"
	        android:orientation="horizontal"
	        android:gravity="center_vertical">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@color/transparent"
	            android:textSize="@dimen/Part1_script_textview_header_fontsize"
	            android:textColor="@color/text_index_header_color"
	            android:text="A. "/>
	        <com.mZone.epro.toeic.customView.CustomWordClickableScriptTextview
			    android:id="@+id/rowScriptA"
			    android:textSize="@dimen/Part1_script_textview_fontsize"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:textColor="@color/text_normal_color"/>
	    </LinearLayout>
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/Part1_script_textview_divider_height"
	        android:layout_marginLeft="@dimen/Part1_script_textview_divider_margin_l"
	        android:layout_marginRight="@dimen/Part1_script_textview_divider_margin_r"
	        android:layout_marginTop="@dimen/Part1_script_textview_divider_margin_tb"
	        android:layout_marginBottom="@dimen/Part1_script_textview_divider_margin_tb"
	        android:background="@drawable/subview_divider_background"/>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/Part1_script_textview_margin_left"
	        android:orientation="horizontal"
	        android:gravity="center_vertical">
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@color/transparent"
	            android:textSize="@dimen/Part1_script_textview_header_fontsize"
	            android:textColor="@color/text_index_header_color"
	            android:text="B. "/>
	        <com.mZone.epro.toeic.customView.CustomWordClickableScriptTextview 
			    android:id="@+id/rowScriptB"
			    android:textSize="@dimen/Part1_script_textview_fontsize"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:textColor="@color/text_normal_color"/>
	    </LinearLayout>
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/Part1_script_textview_divider_height"
	        android:layout_marginLeft="@dimen/Part1_script_textview_divider_margin_l"
	        android:layout_marginRight="@dimen/Part1_script_textview_divider_margin_r"
	        android:layout_marginTop="@dimen/Part1_script_textview_divider_margin_tb"
	        android:layout_marginBottom="@dimen/Part1_script_textview_divider_margin_tb"
	        android:background="@drawable/subview_divider_background"/>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="@dimen/Part1_script_textview_margin_left"
	        android:orientation="horizontal"
	        android:gravity="center_vertical">
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@color/transparent"
	            android:textSize="@dimen/Part1_script_textview_header_fontsize"
	            android:textColor="@color/text_index_header_color"
	            android:text="C. "/>
	        <com.mZone.epro.toeic.customView.CustomWordClickableScriptTextview 
			    android:id="@+id/rowScriptC"
			    android:textSize="@dimen/Part1_script_textview_fontsize"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:textColor="@color/text_normal_color"/>
	    </LinearLayout>
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="@dimen/Part1_script_textview_divider_height"
	        android:layout_marginLeft="@dimen/Part1_script_textview_divider_margin_l"
	        android:layout_marginRight="@dimen/Part1_script_textview_divider_margin_r"
	        android:layout_marginTop="@dimen/Part1_script_textview_divider_margin_tb"
	        android:layout_marginBottom="@dimen/Part1_script_textview_divider_margin_tb"
	        android:background="@drawable/subview_divider_background"/>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginBottom="@dimen/Part1_script_margin_bottom"
	        android:layout_marginLeft="@dimen/Part1_script_textview_margin_left"
	        android:orientation="horizontal"
	        android:gravity="center_vertical">
	        <TextView
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:background="@color/transparent"
	            android:textSize="@dimen/Part1_script_textview_header_fontsize"
	            android:textColor="@color/text_index_header_color"
	            android:text="D. "/>
	        <com.mZone.epro.toeic.customView.CustomWordClickableScriptTextview 
			    android:id="@+id/rowScriptD"
			    android:textSize="@dimen/Part1_script_textview_fontsize"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:textColor="@color/text_normal_color"/>
	    </LinearLayout>
    </LinearLayout>
</LinearLayout>
