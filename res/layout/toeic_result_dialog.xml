<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="@dimen/toeic_result_dialog_pie_chart_height"
        android:orientation="horizontal"
        android:layout_margin="@dimen/toeic_result_dialog_pie_chart_margin">
        <com.mZone.epro.toeic.result.CustomResultPieChart 
            android:id="@+id/toeic_result_listening_pie"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_margin="@dimen/toeic_result_dialog_pie_chart_margin"
            android:layerType="hardware"
            app:boundStrokeWidth="@dimen/toeic_result_dialog_pie_chart_boundStrokeWidth"
            app:boundStrokeColor="@color/toeic_result_dialog_pie_boundStrokeColor"
            app:baseColor="@color/toeic_result_dialog_pie_baseColor"
            app:pieColor1="@color/toeic_result_dialog_pie_part_1"
            app:pieColor2="@color/toeic_result_dialog_pie_part_2"
            app:pieColor3="@color/toeic_result_dialog_pie_part_3"
            app:pieColor4="@color/toeic_result_dialog_pie_part_4"
            app:textSize="@dimen/toeic_result_dialog_pie_chart_textSize"/>
        <com.mZone.epro.toeic.result.CustomResultPieChart 
            android:id="@+id/toeic_result_reading_pie"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:layout_margin="@dimen/toeic_result_dialog_pie_chart_margin"
            android:layerType="hardware"
            app:boundStrokeWidth="@dimen/toeic_result_dialog_pie_chart_boundStrokeWidth"
            app:boundStrokeColor="@color/toeic_result_dialog_pie_boundStrokeColor"
            app:baseColor="@color/toeic_result_dialog_pie_baseColor"
            app:pieColor1="@color/toeic_result_dialog_pie_part_5"
            app:pieColor2="@color/toeic_result_dialog_pie_part_6"
            app:pieColor3="@color/toeic_result_dialog_pie_part_7"
            app:textSize="@dimen/toeic_result_dialog_pie_chart_textSize"/>
    </LinearLayout>
    
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/toeic_result_dialog_explaination_padding_lr"
        android:paddingRight="@dimen/toeic_result_dialog_explaination_padding_lr">
        <LinearLayout
            android:id="@+id/part_1_layout" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true">
            <View 
                android:layout_width="@dimen/toeic_result_dialog_explaination_square_size"
                android:layout_height="@dimen/toeic_result_dialog_explaination_square_size"
                android:background="@color/toeic_result_dialog_pie_part_1"/>
            <TextView 
                android:id="@+id/toeic_result_dialog_part_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/toeic_result_dialog_explaination_tv_padding_lr"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/part_2_layout" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/toeic_result_dialog_explaination_margin_t"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/part_1_layout">
            <View 
                android:layout_width="@dimen/toeic_result_dialog_explaination_square_size"
                android:layout_height="@dimen/toeic_result_dialog_explaination_square_size"
                android:background="@color/toeic_result_dialog_pie_part_2"/>
            <TextView 
                android:id="@+id/toeic_result_dialog_part_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/toeic_result_dialog_explaination_tv_padding_lr"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/part_3_layout" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/toeic_result_dialog_explaination_margin_t"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/part_2_layout">
            <View 
                android:layout_width="@dimen/toeic_result_dialog_explaination_square_size"
                android:layout_height="@dimen/toeic_result_dialog_explaination_square_size"
                android:background="@color/toeic_result_dialog_pie_part_3"/>
            <TextView 
                android:id="@+id/toeic_result_dialog_part_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/toeic_result_dialog_explaination_tv_padding_lr"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/part_4_layout" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/toeic_result_dialog_explaination_margin_t"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/part_3_layout">
            <View 
                android:layout_width="@dimen/toeic_result_dialog_explaination_square_size"
                android:layout_height="@dimen/toeic_result_dialog_explaination_square_size"
                android:background="@color/toeic_result_dialog_pie_part_4"/>
            <TextView 
                android:id="@+id/toeic_result_dialog_part_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/toeic_result_dialog_explaination_tv_padding_lr"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/part_5_layout" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true">
            <TextView 
                android:id="@+id/toeic_result_dialog_part_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/toeic_result_dialog_explaination_tv_padding_lr"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
            <View 
                android:layout_width="@dimen/toeic_result_dialog_explaination_square_size"
                android:layout_height="@dimen/toeic_result_dialog_explaination_square_size"
                android:background="@color/toeic_result_dialog_pie_part_5"/>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/part_6_layout" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/toeic_result_dialog_explaination_margin_t"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_below="@id/part_5_layout">
            <TextView 
                android:id="@+id/toeic_result_dialog_part_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/toeic_result_dialog_explaination_tv_padding_lr"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
            <View 
                android:layout_width="@dimen/toeic_result_dialog_explaination_square_size"
                android:layout_height="@dimen/toeic_result_dialog_explaination_square_size"
                android:background="@color/toeic_result_dialog_pie_part_6"/>
        </LinearLayout>
        
        <LinearLayout
            android:id="@+id/part_7_layout" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/toeic_result_dialog_explaination_margin_t"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:layout_below="@id/part_6_layout">
            <TextView 
                android:id="@+id/toeic_result_dialog_part_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/toeic_result_dialog_explaination_tv_padding_lr"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
            <View 
                android:layout_width="@dimen/toeic_result_dialog_explaination_square_size"
                android:layout_height="@dimen/toeic_result_dialog_explaination_square_size"
                android:background="@color/toeic_result_dialog_pie_part_7"/>
        </LinearLayout>
    </RelativeLayout>
    
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/toeic_result_dialog_explaination_score_tv_margin">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/toeic_result_dialog_explaination_score_tv_margin"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/toeic_result_dialog_listening_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
				android:textSize="@dimen/toeic_result_dialog_explaination_reading_listening_score_title_textsize"/>
            <TextView 
                android:id="@+id/toeic_result_dialog_reading_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
				android:textSize="@dimen/toeic_result_dialog_explaination_reading_listening_score_title_textsize"/>
        </LinearLayout>
        <TextView 
            android:id="@+id/toeic_result_dialog_total_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/toeic_result_dialog_explaination_score_tv_margin"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#A81C1C"/>
    </LinearLayout>
    
</LinearLayout>
