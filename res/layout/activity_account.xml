<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEDEDE"
    tools:context=".AccountActivity">
    <LinearLayout 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="@dimen/account_activity_account_layout_height"
            android:layout_marginTop="@dimen/account_activity_account_layout_margin_t"
            android:layout_marginLeft="@dimen/account_activity_account_layout_padding_lr"
            android:layout_marginRight="@dimen/account_activity_account_layout_padding_lr"
            android:paddingLeft="@dimen/account_activity_account_layout_padding_lr"
            android:paddingRight="@dimen/account_activity_account_layout_padding_lr"
            android:background="@drawable/account_activity_log_layout_background">
            <ImageView 
                android:id="@+id/activity_account_account_imgv"
                android:layout_width="@dimen/account_activity_account_layout_imgv_size"
                android:layout_height="@dimen/account_activity_account_layout_imgv_size"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/account_activity_account_layout_imgv_margin_r"
                android:src="@drawable/ic_account"
                android:scaleType="fitXY"
                android:contentDescription="@string/image_view_content_description"/>
            <TextView 
                android:id="@+id/activity_account_account_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_account_account_layout_tv_margin_top"
                android:layout_toRightOf="@id/activity_account_account_imgv"
                android:textSize="@dimen/activity_account_account_layout_tv_size"
                android:singleLine="true"/>
            <ImageView 
                android:id="@+id/activity_account_credit_imgv"
                android:layout_width="@dimen/activity_account_account_layout_credit_imgv_width"
                android:layout_height="@dimen/activity_account_account_layout_credit_imgv_height"
                android:layout_marginTop="@dimen/activity_account_account_layout_credit_imgv_margin_t"
                android:layout_toRightOf="@id/activity_account_account_imgv"
                android:layout_below="@id/activity_account_account_tv"
                android:scaleType="fitXY"
                android:src="@drawable/ic_credits"
                android:contentDescription="@string/image_view_content_description"/>
            <TextView 
                android:id="@+id/activity_account_credit_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_account_account_layout_credit_tv_margin_l"
                android:layout_marginRight="@dimen/activity_account_account_layout_log_btn_width"
                android:layout_toRightOf="@id/activity_account_credit_imgv"
                android:layout_alignBottom="@id/activity_account_credit_imgv"
                android:paddingRight="@dimen/activity_account_account_layout_credit_tv_margin_l"
                android:textAppearance="?android:attr/textAppearanceSmall"/>
            <Button 
                android:id="@+id/activity_account_log_btn"
                android:layout_width="@dimen/activity_account_account_layout_log_btn_width"
                android:layout_height="@dimen/activity_account_account_layout_log_btn_height"
                android:padding="@dimen/activity_account_account_layout_log_btn_padding"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="@string/account_activity_logout"
                android:gravity="center"
                android:background="@drawable/account_log_flat_button_selector"
                android:textColor="@drawable/account_log_flat_button_text_color_selector"
                android:textSize="@dimen/activity_account_account_layout_log_btn_textsize"/>
        </RelativeLayout>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="@dimen/account_activity_share_layout_height"
            android:layout_marginTop="@dimen/account_activity_share_layout_margin_t"
            android:layout_marginLeft="@dimen/account_activity_share_layout_padding_lr"
            android:layout_marginRight="@dimen/account_activity_share_layout_padding_lr"
            android:paddingLeft="@dimen/account_activity_share_layout_padding_lr"
            android:paddingRight="@dimen/account_activity_share_layout_padding_lr"
            android:background="@drawable/account_activity_log_layout_background"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <TextView 
                android:id="@+id/activity_account_share_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/account_activity_share"/>
            <ImageButton 
                android:id="@+id/activity_account_twitter_share"
                android:layout_width="@dimen/account_activity_share_layout_imgv_width"
                android:layout_height="@dimen/account_activity_share_layout_imgv_height"
                android:layout_marginLeft="@dimen/account_activity_share_layout_imgv_margin"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/account_activity_share_twitter_btn_selector"
                android:background="@color/transparent"
                android:contentDescription="@string/image_view_content_description"/>
            <ImageButton 
                android:id="@+id/activity_account_facebook_share"
                android:layout_width="@dimen/account_activity_share_layout_imgv_width"
                android:layout_height="@dimen/account_activity_share_layout_imgv_height"
                android:layout_marginLeft="@dimen/account_activity_share_layout_imgv_margin"
                android:layout_gravity="center_vertical"
                android:scaleType="fitXY"
                android:src="@drawable/account_activity_share_facebook_btn_selector"
                android:contentDescription="@string/account_activity_facebook_content_description"
                android:background="@color/transparent"/>
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="@dimen/account_activity_google_credit_layout_height"
            android:layout_marginTop="@dimen/account_activity_google_credit_layout_margin_t"
            android:layout_marginLeft="@dimen/account_activity_google_credit_layout_padding_lr"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <RelativeLayout
                android:id="@+id/account_activity_google_credit_btn_parent_1" 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:layout_marginRight="@dimen/account_activity_google_credit_layout_padding_lr"
                android:background="@drawable/account_activity_log_layout_background"
                android:clickable="true">
                <TextView
                    android:id="@+id/account_activity_google_credit_top_tv_1" 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/account_activity_google_credit_top_tv_padding_tb"
                    android:paddingBottom="@dimen/account_activity_google_credit_top_tv_padding_tb"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:background="@drawable/account_activity_google_credit_top_tv_background"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/white"
                    android:text="@string/account_activity_credit_price_1"/>
                
                <Button
                    android:id="@+id/account_activity_google_credit_btn_1" 
                    android:layout_width="@dimen/account_activity_google_credit_btn_size"
                    android:layout_height="@dimen/account_activity_google_credit_btn_size"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/account_activity_google_credit_top_tv_1"
                    android:layout_marginTop="@dimen/account_activity_google_credit_btn_margin_t"
                    android:background="@drawable/account_activity_google_credit_btn_selector_1"
                    android:textColor="@android:color/white"
                    android:text="@string/account_activity_credit_price_1_credit"
                    android:textSize="@dimen/account_activity_google_credit_btn_textsize"
                    android:duplicateParentState="true"/>
                
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
       				android:paddingTop="@dimen/account_activity_google_credit_bottom_tv_padding_tb"
                    android:paddingBottom="@dimen/account_activity_google_credit_bottom_tv_padding_tb"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:background="@drawable/account_activity_google_credit_bottom_tv_background_1"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white"
                    android:text="@string/account_activity_buy_credit"/>
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/account_activity_google_credit_btn_parent_2" 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:layout_marginRight="@dimen/account_activity_google_credit_layout_padding_lr"
                android:background="@drawable/account_activity_log_layout_background"
                android:clickable="true">
                <TextView
                    android:id="@+id/account_activity_google_credit_top_tv_2" 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/account_activity_google_credit_top_tv_padding_tb"
                    android:paddingBottom="@dimen/account_activity_google_credit_top_tv_padding_tb"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:background="@drawable/account_activity_google_credit_top_tv_background"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/white"
                    android:text="@string/account_activity_credit_price_2"/>
                
                <Button
                    android:id="@+id/account_activity_google_credit_btn_2" 
                    android:layout_width="@dimen/account_activity_google_credit_btn_size"
                    android:layout_height="@dimen/account_activity_google_credit_btn_size"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/account_activity_google_credit_top_tv_2"
                    android:layout_marginTop="@dimen/account_activity_google_credit_btn_margin_t"
                    android:background="@drawable/account_activity_google_credit_btn_selector_2"
                    android:textColor="@android:color/white"
                    android:text="@string/account_activity_credit_price_2_credit"
                    android:textSize="@dimen/account_activity_google_credit_btn_textsize"
                    android:duplicateParentState="true"/>
                
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
       				android:paddingTop="@dimen/account_activity_google_credit_bottom_tv_padding_tb"
                    android:paddingBottom="@dimen/account_activity_google_credit_bottom_tv_padding_tb"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:background="@drawable/account_activity_google_credit_bottom_tv_background_2"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white"
                    android:text="@string/account_activity_buy_credit"/>
            </RelativeLayout>
            
            <RelativeLayout
                android:id="@+id/account_activity_google_credit_btn_parent_3" 
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.33"
                android:layout_marginRight="@dimen/account_activity_google_credit_layout_padding_lr"
                android:background="@drawable/account_activity_log_layout_background"
                android:clickable="true">
                <TextView
                    android:id="@+id/account_activity_google_credit_top_tv_3" 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/account_activity_google_credit_top_tv_padding_tb"
                    android:paddingBottom="@dimen/account_activity_google_credit_top_tv_padding_tb"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:background="@drawable/account_activity_google_credit_top_tv_background"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textColor="@android:color/white"
                    android:text="@string/account_activity_credit_price_3"/>
                
                <Button
                    android:id="@+id/account_activity_google_credit_btn_3" 
                    android:layout_width="@dimen/account_activity_google_credit_btn_size"
                    android:layout_height="@dimen/account_activity_google_credit_btn_size"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/account_activity_google_credit_top_tv_3"
                    android:layout_marginTop="@dimen/account_activity_google_credit_btn_margin_t"
                    android:background="@drawable/account_activity_google_credit_btn_selector_3"
                    android:textColor="@android:color/white"
                    android:text="@string/account_activity_credit_price_3_credit"
                    android:textSize="@dimen/account_activity_google_credit_btn_textsize"
                    android:duplicateParentState="true"/>
                
                <TextView 
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
       				android:paddingTop="@dimen/account_activity_google_credit_bottom_tv_padding_tb"
                    android:paddingBottom="@dimen/account_activity_google_credit_bottom_tv_padding_tb"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:gravity="center"
                    android:background="@drawable/account_activity_google_credit_bottom_tv_background_3"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@android:color/white"
                    android:text="@string/account_activity_buy_credit"/>
            </RelativeLayout>
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="@dimen/account_activity_ad_layout_height"
            android:layout_marginTop="@dimen/account_activity_ad_layout_margin_t"
            android:layout_marginLeft="@dimen/account_activity_ad_layout_padding_lr"
            android:layout_marginRight="@dimen/account_activity_ad_layout_padding_lr"
            android:paddingLeft="@dimen/account_activity_ad_layout_padding_lr"
            android:paddingRight="@dimen/account_activity_ad_layout_padding_lr"
            android:background="@drawable/account_activity_log_layout_background"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:visibility="gone">
            
            <TextView 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/account_activity_ad_tv_margin_t"
                android:layout_marginBottom="@dimen/account_activity_ad_tv_margin_bottom"
                android:gravity="left|center_vertical"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/account_activity_free_credit"/>
             <FrameLayout 
	            android:id="@+id/account_activity_ad_view"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_weight="1"
	            android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        
        <LinearLayout 
            android:id="@+id/account_activity_buy_credit_by_phonecard_parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/account_activity_phonecard_layout_height"
            android:layout_marginTop="@dimen/account_activity_phonecard_layout_margin_t"
            android:layout_marginLeft="@dimen/account_activity_phonecard_layout_padding_lr"
            android:layout_marginRight="@dimen/account_activity_phonecard_layout_padding_lr"
            android:paddingLeft="@dimen/account_activity_phonecard_layout_padding_lr"
            android:paddingRight="@dimen/account_activity_phonecard_layout_padding_lr"
            android:background="@drawable/account_activity_log_layout_background"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <TextView 
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/account_activity_tv_phonecard_buy"/>
            <Button 
                android:id="@+id/account_activity_buy_credit_by_phonecard"
                android:layout_width="@dimen/account_activity_phonecard_btn_width"
                android:layout_height="@dimen/account_activity_phonecard_btn_height"
                android:padding="@dimen/account_activity_phonecard_btn_padding"
                android:textSize="@dimen/account_activity_phonecard_btn_textsize"
                android:layout_gravity="center_vertical"
                android:background="@drawable/account_log_flat_button_selector"
                android:textColor="@drawable/account_log_flat_button_text_color_selector"
                android:text="@string/account_activity_btn_phonecard_buy"/>
            
        </LinearLayout>
	</LinearLayout>
</ScrollView>
