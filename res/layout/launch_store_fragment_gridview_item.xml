<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/launch_store_item_height"
    android:paddingLeft="@dimen/launch_store_item_margin_lr"
    android:paddingRight="@dimen/launch_store_item_margin_lr"
    android:paddingTop="@dimen/launch_store_item_margin_t"
    android:paddingBottom="@dimen/launch_store_item_margin_b"
    android:orientation="vertical"
    android:weightSum="1.0"
    android:background="@drawable/launch_store_grid_item_background_xml"
    android:descendantFocusability="blocksDescendants">
    <ImageView 
        android:id="@+id/imgv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.65"
        android:layout_marginLeft="@dimen/launch_store_item_imgv_margin_lr"
        android:layout_marginRight="@dimen/launch_store_item_imgv_margin_lr"
        android:layout_marginTop="@dimen/launch_store_item_imgv_margin_t"
        android:padding="@dimen/launch_store_item_imgv_padding"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:contentDescription="@string/image_view_content_description"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.35"
        android:orientation="vertical">
        <TextView 
		    android:id="@+id/tvTitle"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingLeft="@dimen/launch_store_item_tv_title_padding_l"
		    android:textSize="@dimen/launch_store_item_tv_title_textsize"
		    android:textColor="@color/launch_store_grid_item_tv_textcolor"
		    android:gravity="left"
		    android:singleLine="true"/>
        <TextView 
		    android:id="@+id/tvSubTitle"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingLeft="@dimen/launch_store_item_tv_title_padding_l"
		    android:textSize="@dimen/launch_store_item_tv_subtitle_textsize"
		    android:textColor="@color/launch_store_grid_item_tv_textcolor"
		    android:gravity="left"
		    android:singleLine="true"/>                                                                                                                                                                                  
		<TextView 
		    android:id="@+id/tvAuthor"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingLeft="@dimen/launch_store_item_tv_author_padding_l"
		    android:textSize="@dimen/launch_store_item_tv_author_textsize"
		    android:textColor="@color/launch_store_grid_item_tv_textcolor"
		    android:gravity="left"
		    android:singleLine="true"/>
		<LinearLayout 
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="@dimen/launch_store_item_progress_btn_margin_lr"
		    android:layout_marginRight="@dimen/launch_store_item_progress_btn_margin_lr"
		    android:layout_marginTop="@dimen/launch_store_item_progress_btn_margin_tb"
		    android:layout_marginBottom="@dimen/launch_store_item_progress_btn_margin_tb"
		    android:layout_gravity="bottom">
		    <com.mZone.epro.launch.customView.CustomProgressButton 
			    android:id="@+id/btnAction"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:textSize="@dimen/launch_store_item_progress_btn_textsize"
			    android:background="@drawable/launch_store_grid_item_btnaction_selector"
			    android:gravity="center"
			    android:textColor="#000000"/>
		</LinearLayout>    
    </LinearLayout>
</LinearLayout>
